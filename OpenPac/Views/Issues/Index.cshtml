@model IEnumerable<OpenPac.Models.Issue>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Name
        </th>
        <th>
            Category
        </th>
        <th>
            MediaOutletIssues
        </th>
        <th>
            CandidateIssues
        </th>
        <th>
            DistrictIssues
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@item.Name
        </td>
        <td>
			@item.Category
        </td>
        <td>
			@(item.MediaOutletIssues == null ? "None" : item.MediaOutletIssues.Count.ToString())
        </td>
        <td>
			@(item.CandidateIssues == null ? "None" : item.CandidateIssues.Count.ToString())
        </td>
        <td>
			@(item.DistrictIssues == null ? "None" : item.DistrictIssues.Count.ToString())
        </td>
    </tr>
}

</table>


