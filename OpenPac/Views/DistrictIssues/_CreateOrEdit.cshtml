@model OpenPac.Models.DistrictIssue

@* This partial view defines form fields that will appear when creating and editing entities *@

<div class="editor-label">
    @Html.LabelFor(model => model.Importance)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.Importance)
    @Html.ValidationMessageFor(model => model.Importance)
</div>

<div class="editor-label">
    District
</div>
<div class="editor-field">
    @Html.DropDownListFor(model => model.DistrictId, ((IEnumerable<OpenPac.Models.District>)ViewBag.PossibleDistricts).Select(option => new SelectListItem {
        Text = Html.DisplayTextFor(_ => option).ToString(), 
        Value = option.Id.ToString(),
        Selected = (Model != null) && (option.Id == Model.DistrictId)
    }), "Choose...")
    @Html.ValidationMessageFor(model => model.DistrictId)
</div>
<div class="editor-label">
    Issue
</div>
<div class="editor-field">
    @Html.DropDownListFor(model => model.IssueId, ((IEnumerable<OpenPac.Models.Issue>)ViewBag.PossibleIssues).Select(option => new SelectListItem {
        Text = (option == null ? "None" : option.Name), 
        Value = option.Id.ToString(),
        Selected = (Model != null) && (option.Id == Model.IssueId)
    }), "Choose...")
    @Html.ValidationMessageFor(model => model.IssueId)
</div>
