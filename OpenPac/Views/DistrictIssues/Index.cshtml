@model IEnumerable<OpenPac.Models.DistrictIssue>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Importance
        </th>
        <th>
            District
        </th>
        <th>
            Issue
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@item.Importance
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.District).ToString()
        </td>
        <td>
			@(item.Issue == null ? "None" : item.Issue.Name)
        </td>
    </tr>
}

</table>


