@model OpenPac.Models.WorkExperience

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>WorkExperience</legend>

    <div class="display-label">Company</div>
    <div class="display-field">@Model.Company</div>

    <div class="display-label">Start</div>
    <div class="display-field">@String.Format("{0:g}", Model.Start)</div>

    <div class="display-label">End</div>
    <div class="display-field">@String.Format("{0:g}", Model.End)</div>

    <div class="display-label">Position</div>
    <div class="display-field">@Model.Position</div>

    <div class="display-label">Responsibilities</div>
    <div class="display-field">@Model.Responsibilities</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


